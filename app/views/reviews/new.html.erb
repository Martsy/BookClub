<html>
  <%= form_for [@book, @review] do |f| %>
    <%= f.label :headline, 'Title'%>
    <%= f.text_field :headline, required: true%>

    <%= f.label :user, 'Name'%>
    <%= f.text_field :user, required: true%>

    <%= f.label :rating%>
    <%= f.number_field :rating, in: 1..10, required: true%>

    <%= f.label :text, 'Review'%>
    <%= f.text_area :text, required: true%>

    <%= f.submit%>
    <% end %>
</html>
