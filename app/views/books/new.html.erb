<%= form_for @book do |f| %>
  <h1>New Book</h1>
    <p><%= f.label :title %><br/>
    <%= f.text_field :title, required: true %></p>
    <p><%= f.label :authors %><br/>
    <%= f.text_field :authors, value: "", required: true %></p>
    <p><%= f.label :pages %><br/>
    <%= f.number_field :pages, in: 1..10000, required: true %></p>
    <p><%= f.label :year_published %><br/>
    <%= f.number_field :year_published, in: 1456...2019, required: true %></p>
    <p><%= f.label :book_cover %><br/>
    <%= f.text_field :book_cover %></p>
    <p><%= f.submit %></p>
  <% end %>
